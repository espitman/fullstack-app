{
  "name": "@my-fullstack-app/api",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "nx serve",
    "build": "nx build",
    "serve": "nx serve"
  },
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "--node-env=production"
          ]
        },
        "configurations": {
          "development": {
            "args": [
              "--node-env=development"
            ]
          }
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@my-fullstack-app/api:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@my-fullstack-app/api:build:development"
          },
          "production": {
            "buildTarget": "@my-fullstack-app/api:build:production"
          }
        }
      }
    }
  }
}
